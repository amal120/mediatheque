<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:fitsSystemWindows="true"
    android:background="@drawable/back"

    tools:context="com.example.dell.mediatheque.ValiderDoc">

    <TextView
        android:layout_width="wrap_content"
        android:text="Titre Livre:"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/etTitt"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:inputType="text"
      />
    <TextView
        android:layout_width="wrap_content"
        android:text="Votre matricule:"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/etMatr"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        />

    <TextView
        android:layout_width="wrap_content"
        android:text="Date emprunt:"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/etEmprunt"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:inputType="date"
   />

    <Button
        android:id="@+id/btValid"
        android:text="Valider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="userDoc"
        android:layout_marginTop="30dp"
        android:background="@drawable/colorbutton"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:id="@+id/btAnnul"
        android:text="Annuler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="userAnnulerr"
        android:layout_marginTop="30dp"
        android:background="@drawable/colorbutton"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
