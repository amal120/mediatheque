<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dell.mediatheque">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="MediaULT"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Authentification" />
        <activity
            android:name=".Register"
            android:label="Register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DocInterface"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Place"
            android:label="@string/title_activity_place"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ValiderDoc"
            android:label="@string/title_activity_valider_doc"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DocAccueilActivity"
            android:label="Documents"
            />
        <activity
            android:name=".Mediatheque"
            android:label="Accueil"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
